<br>

<%= form_for @practice do |f| %>
    <%= f.hidden_field :creator_id, value: @practice.creator.id  %>
    <%= f.text_field :name, placeholder: "practice name" %><br>
    <%= f.text_area :description, placeholder: "enter notes here" %><br>
    <%= f.select :category, @categorys = ["live", "love myself", "love my family, friends and neighbours", "love my enemies", "care for creation and our common home"], :include_blank => "because i want to better ... (select one below)" %>

    <%= f.submit %>
  <% end %>
